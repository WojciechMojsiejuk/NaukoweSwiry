#include<iostream>
#include<cstdio>
#include<cstdlib>
#include<string>
#include<fstream>
#include <windows.h>
using namespace std;
struct przedmioty
{   string nazwa;
    string stan;
    float kwota;
    string status;
    float kara;
    string data;
    int id_klienta;
    przedmioty *nastepny;
    przedmioty();
};

przedmioty::przedmioty()
{
    nastepny=0;
}
struct lista_przedmioty
{
    przedmioty *pierwszy;
    void dodaj_przedmiot();
    void usun_przedmiot();
    void edytuj_przedmiot();
    void wyswietl_przedmiot();
    lista_przedmioty();

};
lista_przedmioty::lista_przedmioty()
{
    pierwszy = 0;
}
struct wlasciciel
{   int id_klienta;
    string imie;
    string nazwisko;
    wlasciciel *nastepny;
    wlasciciel();
};
wlasciciel::wlasciciel()
{
    nastepny=0;
}

struct lista_wlasciciel
{
    wlasciciel *pierwszy;
    void dodaj_wlasciciela();
    void usun_wlasciciela();
    void edytuj_wlasciciela();
    void wyswietl_wlasciciela();
    lista_wlasciciel();
};
lista_wlasciciel::lista_wlasciciel()
{
    pierwszy=0;
}
void lista_przedmioty::dodaj_przedmiot()
{ string stan, status, data, nazwa;
    float kara, kwota;
    int id_klienta;

    cout<<"PODAJ NAZWE PRZEDMIOTU: "<<endl;
    cin>>nazwa;
    cout<<"PODAJ STAN PRZEDMIOTU(malymi literami): "<<endl;
    cin>>stan;
    cout<<"PODAJ KWOTE ZASTAWIENIA PRZEDMIOTU: "<<endl;
    cin>>kwota;
    cout<<"PODAJ STATUS PRZEDMIOTU(malymi literami): "<<endl;
    cin>>status;
    cout<<"PODAJ CENE W RAZIE NIE SPLACENIA DLUGU: "<<endl;
    cin>>kara;
    cout<<"PODAJ DATE ZASTAWIENIA( FORMAT: DD_MM_RRRR): "<<endl;
    cin>>data;
    cout<<"PODAJ NR. ID WLASCICIELA: "<<endl;
    cin>>id_klienta;
    cout<<"DODANO: "<<nazwa<<endl;
    przedmioty *nowy=new przedmioty;
    nowy->nazwa = nazwa;
    nowy->stan = stan;
    nowy->kwota = kwota;
    nowy->status = status;
    nowy->kara = kara;
    nowy->data = data;
    nowy->id_klienta = id_klienta;
    if(pierwszy==0)
    {
        pierwszy=nowy;
    }
    else
        {
            przedmioty *temp = pierwszy;
    while(temp->nastepny)
    {
       temp = temp->nastepny;
    }
    temp->nastepny = nowy;
    nowy->nastepny = 0;
        }
}
void lista_przedmioty::wyswietl_przedmiot()//przetestowac
{int wybor;
    string stat,data;
    float przedzial,przedzial_;
    cout<<"WYSWIETL PRZEDMIOT NA PODSTAWIE: "<<endl;
    cout<<"1.STATUSU"<<endl;
     cout<<"2.PRZEDZIALU CENOWEGO"<<endl;
      cout<<"3.DATCIE ZASTAWIENIA"<<endl;
    cout<<"Wybrana opcja: ";
    cin>>wybor;
   przedmioty *temp = pierwszy;

    switch(wybor)
    {
        case 1:

            cout<<"PODAJ STATUS: ";
            cin>>stat;

    while(temp)
    {
        if(temp->status == stat)
       {
           cout<<"ZNALEZIONO: "<<temp->nazwa<<"\n O wartosci: "<<temp->kwota<<"\n Stanie: "<<temp->stan<<" \n Statusie: "<<temp->status<<"\n Dacie wystawienia: "<<temp->data<<"\n ID wlasciciela: "<<temp->id_klienta<< endl;
       }
        temp=temp->nastepny;
    }
            break;

        case 2:
            cout<<"Dolna granica: ";
            cin>>przedzial_; cout<<endl;
            cout<<"Gorna granica: ";
            cin>>przedzial;

    while(temp)
    {
        if(temp->kwota >= przedzial_ && temp->kwota <= przedzial)
       {
            cout<<"ZNALEZIONO: "<<temp->nazwa<<"\n O wartosci: "<<temp->kwota<<"\n Stanie: "<<temp->stan<<" \n Statusie: "<<temp->status<<"\n Dacie wystawienia: "<<temp->data<<"\n ID wlasciciela: "<<temp->id_klienta<< endl;
       }
        temp=temp->nastepny;
    }
            break;
            case 3:

                cout<<"PODAJ DATE ZASTAWIENIA(FORMAT: DD_MM_RRRR): ";
            cin>>data;
            while(temp)
    {
        if(temp->data == data )
       {
            cout<<"ZNALEZIONO: "<<temp->nazwa<<"\n O wartosci: "<<temp->kwota<<"\n Stanie: "<<temp->stan<<" \n Statusie: "<<temp->status<<"\n Dacie wystawienia: "<<temp->data<<"\n ID wlasciciela: "<<temp->id_klienta<< endl;
       }
        temp=temp->nastepny;
    }
            break;
            default:
            cout<<" NIE MA TAKIEJ OPCJI !"<<endl;
            cout<<"  POWROT DO MENU...";
            Sleep(3000);
            break;

    }


}
/***************************************************************/
void lista_wlasciciel::dodaj_wlasciciela()
{   int id;
    string imie,nazwisko;
    cout<<"PODAJ IMIE KLIENTA: "<<endl;
    cin>>imie;
    cout<<"PODAJ NAZWISKO KLIENTA: "<<endl;
    cin>>nazwisko;
     cout<<"PODAJ ID KLIENTA: "<<endl;
    cin>>id;
    cout<<"DODANO: "<<imie<<" "<<nazwisko<<" "<<id<<endl;
    wlasciciel *nowy = new wlasciciel;
    nowy->imie = imie;
    nowy->nazwisko = nazwisko;
    nowy->id_klienta = id;

    if(pierwszy==0)
    {
        pierwszy=nowy;
    }
    else
        {
            wlasciciel *temp=pierwszy;
    while(temp->nastepny)
    {
       temp = temp->nastepny;
    }
    temp->nastepny = nowy;
    nowy->nastepny = 0;

        }
}

void lista_wlasciciel::wyswietl_wlasciciela()
{
    string kogo;
    cin>>kogo;
    wlasciciel *temp = pierwszy;
    while(temp)
    {int licz=0;
       for(int i=0;i<kogo.size();i++)
       {
           if(kogo[i]==temp->nazwisko[i])
           {
               licz++;
           }
       } if(licz==kogo.size())
       {
           cout<<"ZNALEZIONO: "<<temp->nazwisko<<" "<<temp->imie<<" ID: "<<temp->id_klienta<<endl;
       }
        temp=temp->nastepny;
    }

}
/***************************************************************/
void lista_wlasciciel::usun_wlasciciela()
{
    int id,nr=1;
    cout<<"Podaj ID klienta ktorego chcesz usunac: ";
    cin>>id;
    wlasciciel *temp = pierwszy;
    while(temp)
    {   if(temp->id_klienta == id )
    {
        break;
    }
        nr++;
        temp = temp->nastepny;
    }
     if (nr==1)
    {
       wlasciciel *temp = pierwszy;
       if(temp==0) return;
        pierwszy = temp->nastepny;
    }
    if (nr>=2)
    {
        int j = 1;
        wlasciciel *temp = pierwszy;
         if(temp==0) return;

        while (temp)
        {

            if ((j+1)==nr) break;
            temp = temp->nastepny;
            j++;
        } cout<<"Usunieto."<<endl;
        if (temp->nastepny->nastepny==0)
            temp->nastepny = 0;

        else
            temp->nastepny = temp->nastepny->nastepny;

    }
}



void Wyswietl_Menu()
{
   HANDLE hOut = GetStdHandle( STD_OUTPUT_HANDLE );
  SetConsoleTextAttribute( hOut, FOREGROUND_GREEN | FOREGROUND_INTENSITY );
    cout<<"      ***WITAJ W LOMBARDZIE***    "<<endl;
    cout<<" WYBIERZ OPCJE: "<<endl<<endl;
    cout<<"  1.Dodaj przedmiot."<<endl;
    cout<<"  2.Edytuj przedmiot."<<endl;
    cout<<"  3.Usun przedmiot."<<endl;
    cout<<"  4.Wyswietl przedmiot"<<endl;
    cout<<"  5.Dodaj klienta"<<endl;
    cout<<"  6.Usun klienta"<<endl;
    cout<<"  7.Edytuj dane o kliencie"<<endl;
    cout<<"  8.Wyswietl dane o kliencie"<<endl;
    cout<<"  9.Zakoncz program"<<endl<<endl;
}
int main()
{
/*******************************************************/
  int wybor;
  lista_wlasciciel *baza_wlasciciela = new lista_wlasciciel;
  lista_przedmioty *baza_przedmioty = new lista_przedmioty;

    do
    {
        system("cls");
        Wyswietl_Menu();
        cout<<"   Podaj cyfre od 1 do 9: ";
        cin>>wybor;
          system("cls");
    switch (wybor)
    {

        case 1:
            baza_przedmioty->dodaj_przedmiot();
            system("pause");
            break;
        case 2:
            cout<<"Edytuje przedmiot"<<endl;
            system("pause");
            break;
        case 3:
            cout<<"Usuwam przedmiot"<<endl;
            system("pause");
            break;
        case 4:
            baza_przedmioty->wyswietl_przedmiot();
            system("pause");
            break;
        case 5:

            baza_wlasciciela->dodaj_wlasciciela();
            cout<<endl;
            system("pause");
            break;
        case 6:
            baza_wlasciciela-> usun_wlasciciela();
            system("pause");
            break;
        case 7:
            cout<<"edytuje dane o kliencie"<<endl;
            system("pause");
            break;
        case 8:
            cout<<"Podaj nazwisko klienta lub jego poczatek"<<endl;
            baza_wlasciciela->wyswietl_wlasciciela();
            system("pause");
            break;
        case 9:
            cout<<"GOODBYE..."<<endl;
            Sleep(2000);
            break;

        default:
            cout<<" NIE MA TAKIEJ OPCJI !"<<endl;
            cout<<"  POWROT DO MENU...";
            Sleep(3000);
            break;

    }
        }while(int(wybor)!=9);

    return 0;
}
